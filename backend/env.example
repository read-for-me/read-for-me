# ==============================================================================
# Read-For-Me Backend Environment Variables
# ==============================================================================
# 이 파일을 .env로 복사하고 실제 값을 입력하세요.
# cp env.example .env
# ==============================================================================

# ------------------------------------------------------------------------------
# 기본 설정
# ------------------------------------------------------------------------------
PROJECT_NAME=Read-For-Me
VERSION=0.1.0
API_V1_STR=/api/v1

# ------------------------------------------------------------------------------
# CORS 설정
# ------------------------------------------------------------------------------
# 프론트엔드 URL (콤마로 구분하여 여러 개 지정 가능)
# 로컬 개발: http://localhost:3000
# 프로덕션: https://your-frontend-domain.vercel.app
BACKEND_CORS_ORIGINS=http://localhost:3000

# ------------------------------------------------------------------------------
# API Keys (필수)
# ------------------------------------------------------------------------------
# OpenAI API Key (TTS 음성 합성용)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Cloud 인증
# 방법 1: 서비스 계정 키 파일 경로 (로컬 개발용)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# 방법 2: Cloud Run에서는 자동으로 기본 서비스 계정 사용

# ------------------------------------------------------------------------------
# GeekNews 크롤링 설정
# ------------------------------------------------------------------------------
# True: 원본 외부 링크도 함께 크롤링
# False: GeekNews 아티클만 크롤링 (기본값)
GEEKNEWS_CRAWL_ORIGINAL=false

# ------------------------------------------------------------------------------
# Gemini AI 설정 (요약 서비스)
# ------------------------------------------------------------------------------
# Thinking 레벨: "off", "low", "medium", "high"
GEMINI_THINKING_LEVEL=low
GEMINI_THINKING_BUDGET=2048

# ------------------------------------------------------------------------------
# Audio Script 생성 설정
# ------------------------------------------------------------------------------
AUDIO_SCRIPT_MODEL=gemini-2.5-flash
AUDIO_SCRIPT_THINKING_LEVEL=low
AUDIO_SCRIPT_THINKING_BUDGET=2048
AUDIO_SCRIPT_INCLUDE_THOUGHTS=false
AUDIO_SCRIPT_TEMPERATURE=0.5

# ------------------------------------------------------------------------------
# OpenAI TTS 설정
# ------------------------------------------------------------------------------
TTS_MODEL=gpt-4o-mini-tts
TTS_VOICE=marin
TTS_SILENCE_PADDING_MS=500
TTS_INSTRUCTIONS=차분하고 전문적인 한국어 뉴스 아나운서 톤으로 읽어주세요. 명확한 발음과 적절한 속도로 진행합니다.

# ------------------------------------------------------------------------------
# Phoenix LLMOps 설정
# ------------------------------------------------------------------------------
# Phoenix 활성화 여부
PHOENIX_ENABLED=true
# Phoenix 서버 엔드포인트
# 로컬: http://localhost:6006/v1/traces
# Cloud Run: http://phoenix-service:6006/v1/traces (같은 VPC 내)
PHOENIX_COLLECTOR_ENDPOINT=http://localhost:6006/v1/traces
PHOENIX_PROJECT_NAME=read-for-me

# ------------------------------------------------------------------------------
# Storage 설정
# ------------------------------------------------------------------------------
# 스토리지 백엔드: "local" (로컬 파일시스템) | "gcs" (Google Cloud Storage)
STORAGE_BACKEND=local

# GCS 설정 (STORAGE_BACKEND=gcs 일 때 필요)
GCS_BUCKET_NAME=read-for-me-data
GCS_PROJECT_ID=your-gcp-project-id
GCS_SIGNED_URL_EXPIRY_MINUTES=60

# ------------------------------------------------------------------------------
# 디버그 설정 (프로덕션에서는 false 권장)
# ------------------------------------------------------------------------------
DEBUG_CORS=false
DEBUG_LOG_PATH=/tmp/debug.log

# ------------------------------------------------------------------------------
# Apidog CI/CD 설정 (선택)
# ------------------------------------------------------------------------------
APIDOG_API_KEY=
APIDOG_PROJECT_ID=

